<!-- 文字白板区块 -->
<view class='filterContent'>
	<image class="lovePng" src="../../../res/iconfont/wating.png"></image>
	<view class='filterView'>
		<!-- 一行 -->
		<view class="location">
			<view class="filter">
				<text class="text"></text>
			</view>
		</view>
		<!-- 一行 -->
		<view class="location">
			<view class="filter">
				<text class="text">{{data.status}}</text>
			</view>
		</view>
		<!-- 一行 -->
		<!-- <view class="location">
			<view class="filter">
				<image src="../../../res/iconfont/导航.png" style="width:24px;height:24px"></image>
				<text class="text2">一键导航</text>
			</view>
			<view style='color:#ccc;text-align: center;'>|</view>
			<view class="filter" bindtap="callPhone">
				<image src="../../../res/iconfont/电话.jpg" style="width:24px;height:24px"></image>
				<text class="text2" >联系电话</text>
			</view>
		</view> -->
		<view class="detail">
      <view class="nav" bindtap="navigate">
        <image class="iconImg" style="margin-right:10rpx" src="../../../res/images/ic_nav.png"></image> <text style="color:#EB4A42;font-size:30rpx;font-weight: 600;"> 一键导航</text>
      </view>
      <view class="line" style="color: #EB4A42;">|</view>
      <view class="tel" bindtap="callPhone">
        <image class="iconImg" style="margin-right:10rpx" src="../../../res/iconfont/phone.png"></image><text style="color:#EB4A42;font-size:30rpx;font-weight: 600;"> 联系电话</text>
      </view>
    </view>
		<!-- 一行 -->
		<view class="location">
			<view class="filter">
				<image src="../../../res/iconfont/券.png" style="width:22px;height:22px"></image>
				<text class="text3">入住后7张优惠券生效</text>
			</view>
		</view>
	</view>
</view>
<image class="top-image" src="../../../res/images/text-adver.png"></image>
<view class="nothing"></view>
<!-- 中间的内容 -->
<view class='MediumContent' style="overflow:hidden">
	<view>深圳市百姓渔村</view>
	<view style='margin-top:10rpx;'>房型：{{data.order_room_type}}</view>
	<view style='margin-top:10rpx;'>房客：{{data.form.order_name}}</view>
	<view style='margin-top:10rpx;'>入住时间：{{data.order_begin_time}}/{{data.order_end_time}}</view>
	<view style='margin-top:10rpx;'>订单编号：{{data._id}}</view>
	<view style='margin-top:10rpx;'></view>
	<!-- 文末右边 -->
	<view class="content-right">
		<view wx:if="{{data.status=='待确认'}}" bindtap="cancelOrder" id="right-text"
			style=" border:#666 5rpx solid;color:rgba(108,104,104,1)">取消订单</view>
		<view id="right-text" bindtap="backToIndex">再次预订</view>
	</view>
</view>
<!-- 底部的内容 文字详细 -->
<view class='MediumContent'>
	<view id="footContent-headline">
		<view style="font-size:36rpx">
			<image src="../../../res//iconfont/注意.png" style="width:14px;height:14px"></image>
			订房必读
		</view>
		<view style="color:red" bindtap="showModal">查看全部</view>
		<!-- <text class="specification">{{indexData.read}}</text> -->
	</view>
	<text class="specification">{{indexData.read}}</text>
	<!-- 文末右边 -->
</view>

<!-- 弹窗 -->

<view class="commodity_screen" bindtap="hideModal" wx:if="{{showModalStatus}}"></view>
<scroll-view scroll-y animation="{{animationData}}" class="commodity_attr_box" wx:if="{{showModalStatus}}">{{indexData.read}}</scroll-view>
