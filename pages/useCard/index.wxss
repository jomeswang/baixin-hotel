/* 账单 */
page {
  background-color: #FFFAFA;
  color: #484343;
}

.red {
  color: #EB4A42;
}

.bill-wrapper {
  margin: 68rpx auto;
  width: 694rpx;
  padding: 48rpx 16rpx 124rpx 16rpx;
  border-radius: 20rpx;
  background-color: white;
}

.bill-wrapper .item {
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  -webkit-justify-content: space-between;
  box-sizing: border-box;
  height: 80rpx;
  border-bottom: 1rpx solid rgba(112, 112, 112, .14);
  font-size: 28rpx;
  /* color: #707070; */
  padding: 0 10rpx;
  line-height: 80rpx;

}

.bill-wrapper .item .content {
  display: flex;
  display: -webkit-flex;
}

.bill-wrapper .item .left {
  margin-right: 40rpx;
}

/* 支付 */
.pay-wrapper {
  position: fixed;
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  -webkit-justify-content: space-between;
  align-items: center;
  -webkit-align-items: center;
  left: 0;
  bottom: 0;
  height: 124rpx;
  width: 100%;
  box-sizing: border-box;
  box-shadow: 0 -6rpx 14rpx rgba(0, 0, 0, .09);
  padding-right: 28rpx;
  background-color: white;
}



.pay-wrapper .text {
  padding-left: 40rpx;
  font-size: 28rpx;
}

.pay-wrapper .text .money {
  font-size: 60rpx;
}

.pay-wrapper .button {
  width: 196rpx;
  height: 60rpx;
  border-radius: 10rpx;
  color: white;
  font-size: 20rpx;
  text-align: center;
  line-height: 60rpx;
  background: -webkit-linear-gradient(44deg, #F9814B, #EB4A42);
  background: linear-gradient(44deg, #F9814B, #EB4A42);
}