<template name="roomListItem">
  <view class='roomListItem' bindtap='hotelItemTap'>
    <image class='image' mode='scaleToFill' src='{{imageUrl}}'></image>
    <view class='content'>
      <text class='roomName'>{{roomName}}</text>
      <text class='roomService'>{{services}}</text>
       <text class='roomService' style="font-size:10px">{{eating}} {{time}}</text>
      <!-- 一行 -->
      <view class='priceItem'>
        <image src="../../res/iconfont/券.png" style="width:20px;height:20px; vertical-align:middle"></image>
        <text class='price' >订就送7张优惠券</text>
        <text class='priceTip'></text>
      </view>
      <view class='priceItem' >
        <text class='price'>¥</text>
        <text class='price' style="font-size:34rpx">{{price}}</text>
        <text class='priceTip'>起</text>
      </view>
    </view>
    <view class='bookBtn' hover-class='bookBtnHover' catchtap="handleItem" data-index='{{index}}'>
      预订
    </view>
  </view>
</template>

<!-- 样式搞出来 -->

<template name="roomEmpty">
  <view class='roomEmpty' bindtap='hotelItemTap'>
    <image class='image' mode='scaleToFill' src='{{imageUrl}}'></image>
    <view class='content'>
      <text class='roomName'>{{roomName}}</text>
      <text class='roomService'>{{services}}</text>
      <view class='priceItem'>
        <text id='price'>¥</text>
        <text id='price'>{{price}}</text>
        <text class='priceTip'>起</text>
      </view>
    </view>
    <view class='bookBtn' hover-class='bookBtnHover' catchtap="handleItem" data-index='{{index}}' style="background:rgba(0,0,0,0.22);">
      预订
    </view>
  </view>
</template>