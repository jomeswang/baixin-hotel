<form bindsubmit="formSubmit" >
	<view class="cu-form-group margin-top">
		<view name="order_room_num" class="title">房间数</view>
		<input placeholder="请输入数字"></input>
	</view>

	<view class="cu-form-group margin-top">
		<view class="title">住客名字</view>
		<input name="order_name" placeholder="请输入住客姓名"></input>
	</view>

	<view class="cu-form-group">
		<view class="title">手机号码</view>
		<input name="order_phone_number" placeholder="输入框带标签"></input>
		<view class="cu-capsule radius">
			<view class="cu-tag bg-blue">
				+86
			</view>
			<view class="cu-tag line-blue">
				中国大陆
			</view>
		</view>
	</view>
	<!-- 时间 -->
	<view class="cu-form-group">
		<view class="title">预计到店</view>
		<picker value="reachTime" mode="time" value="{{time}}" start="09:01" end="21:01" bindchange="TimeChange">
			<view class="picker">
				{{time}}
			</view>
		</picker>
	</view>
	<!-- <view class="cu-form-group">
		<view class="title">日期选择</view>
		<picker mode="date" value="{{date}}" start="2015-09-01" end="2020-09-01" bindchange="DateChange">
			<view class="picker">
				{{date}}
			</view>
		</picker>
	</view> -->
	<!-- 时间头 -->

<!-- 时间尾 -->
	<view class="cu-bar bg-white margin-top">
		<view class="action" >
		请上传身份证正反面照片
		</view>
		<view class="action">
			{{imgList.length}}/4
		</view>
	</view>
	<view class="cu-form-group">
		<view class="grid col-4 grid-square flex-sub">
			<view class="bg-img" wx:for="{{imgList}}" wx:key="{{index}}" bindtap="ViewImage" data-url="{{imgList[index]}}">
				<image src='{{imgList[index]}}' mode='aspectFill'></image>
				<view class="cu-tag bg-red" catchtap="DelImg" data-index="{{index}}">
					<text class="cuIcon-close"></text>
				</view>
			</view>
			<view class="solids" bindtap="ChooseImage" wx:if="{{imgList.length<4}}">
				<text class="cuIcon-cameraadd"></text>
			</view>
		</view>
	</view>

	<!-- !!!!! placeholder 在ios表现有偏移 建议使用 第一种样式 -->
	<!-- payment -->
	<view class='payItem'>
  <view class='priceItem'>
    <text>应付：</text>
    <text>¥{{roomPrice}}</text>
    <text wx:if='{{isDiscount}}' class='payMsg'>(已优惠{{discount}}元)</text>
  </view>
  <button class='payBtn'  formType="submit">立即支付</button>
</view>

</form>
